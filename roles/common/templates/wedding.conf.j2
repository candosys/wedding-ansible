<VirtualHost *:80>
    ServerName {{ server_name }}

    WSGIDaemonProcess wedding-rest user=www-data group=www-data threads=5
    WSGIScriptAlias /rest {{ rest_apache_folder }}rest.wsgi

    <Location /rest/>
        WSGIProcessGroup wedding-rest
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
        Require all granted
    </Location>


    Alias /mariage {{ angular_apache_folder }}
    <Directory {{ angular_apache_folder }}>
        Order deny,allow
        Require all granted
        Allow from all
    </Directory>
</VirtualHost>